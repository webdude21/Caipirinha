<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:items="clr-namespace:KnightsOfCSharpiaLib.Items;assembly=KnightsOfCSharpiaLib"
    xmlns:creatures="clr-namespace:KnightsOfCSharpiaLib.Creatures;assembly=KnightsOfCSharpiaLib"
    mc:Ignorable="d" x:Class="KnightsOfCSharpiaWPF.GameField"
        Title="Kngiths Of CSharpia" Height="548.951908166386" Width="800" MinHeight="548.951908166386"
        MinWidth="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary x:Name="images">
            <ImageBrush x:Key="clearing" ImageSource="Backgrounds_Images\clearing.png"/>
            <ImageBrush x:Key="autumn"  ImageSource="Backgrounds_Images\autumn.png"/>
            <ImageBrush x:Key="forest" ImageSource="Backgrounds_Images\forest.png"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource forest}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Image Grid.ColumnSpan="3" Margin="0" Grid.RowSpan="4" Source="creatures_Images/angel.png" Grid.Column="1" Grid.Row="3"/>
        <Button x:Name="inventoryButton" Content="Inventory" Margin="10" Background="#FFB22018" 
                FontFamily="/KnightsOfCSharpiaWPF;component/Fonts/#Old English Text MT" Grid.ColumnSpan="2" FontSize="24" Click="inventoryButton_Click" Grid.Column="0" ToolTip="Edit the inventory of our Hero" Grid.Row="0"/>
        <Button x:Name="AttackButton" Content="Attack" Margin="10" Background="#FFB22018" 
                FontFamily="/KnightsOfCSharpiaWPF;component/Fonts/#Old English Text MT" Grid.ColumnSpan="2" FontSize="24" Click="AttackButton_OnClick" Grid.Column="0" ToolTip="Attack the enemy" Grid.Row="1"/>
        <Button x:Name="DefendButton" Content="Defend" Margin="10" Background="#FFB22018" 
                FontFamily="/KnightsOfCSharpiaWPF;component/Fonts/#Old English Text MT" Grid.ColumnSpan="2" FontSize="24" Click="DefendButton_OnClick" Grid.Column="0" ToolTip="Defend from an enemy attack" Grid.Row="2"/>
    </Grid>
</Window>
