<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:items="clr-namespace:KnightsOfCSharpiaLib.Items;assembly=KnightsOfCSharpiaLib"
    xmlns:creatures="clr-namespace:KnightsOfCSharpiaLib.Creatures;assembly=KnightsOfCSharpiaLib" x:Name="GameFieldWindow"
    mc:Ignorable="d" x:Class="KnightsOfCSharpiaWPF.GameField"
        Title="Kngiths Of CSharpia" Height="548.951908166386" Width="800" MinHeight="548.951908166386"
        MinWidth="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary x:Name="images">
            <ImageBrush x:Key="clearing" ImageSource="Backgrounds_Images\clearing.png"/>
            <ImageBrush x:Key="autumn"  ImageSource="Backgrounds_Images\autumn.png"/>
            <ImageBrush x:Key="forest" ImageSource="Backgrounds_Images\forest.png"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource clearing}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Button x:Name="inventoryButton" Content="Inventory" Margin="10" Background="#FFB22018" 
                FontFamily="/KnightsOfCSharpiaWPF;component/Fonts/#Old English Text MT" Grid.ColumnSpan="2" FontSize="24" Click="inventoryButton_Click" Grid.Column="0" ToolTip="Edit the inventory of our Hero" Grid.Row="0"/>
        <Button x:Name="Battle" Content="To Battle!" Margin="10" Background="#FFB22018" 
                FontFamily="/KnightsOfCSharpiaWPF;component/Fonts/#Old English Text MT" Grid.ColumnSpan="2" FontSize="24" Grid.Column="0" ToolTip="Attack the enemy" Grid.Row="1" Click="Battle_Click"/>
        <TextBlock Name="StatTextBlock" Grid.ColumnSpan="3" Grid.Column="5" Grid.Row="1" 
                   Grid.RowSpan="5" TextWrapping="Wrap" Text="{Binding Player.Statistics, BindsDirectlyToSource=True, 
                   ElementName=GameFieldWindow, Mode=OneWay, NotifyOnSourceUpdated=True}"
                   Padding="0,0,25,4" Margin="0,0,25,0" VerticalAlignment="Top" 
                   HorizontalAlignment="Right" FontFamily="Comic Sans MS" FontSize="20" UseLayoutRounding="False"/>
        <Grid
            Name="CreatureGrid"
            Grid.ColumnSpan="2" 
            Grid.Column="2" 
            Margin="0,0,0,0" 
            Grid.Row="3" Grid.RowSpan="4" 
            Background="{Binding Enemy.GetImageName, 
                   ElementName=GameFieldWindow, Mode=OneWay, NotifyOnSourceUpdated=True}" />
        <Image Grid.ColumnSpan="2" Grid.Column="5" HorizontalAlignment="Left" 
               Source="{Binding Enemy.GetImageName, 
                   ElementName=GameFieldWindow, Mode=OneWay, NotifyOnSourceUpdated=True}"
               Height="100" Grid.Row="5" Grid.RowSpan="2" VerticalAlignment="Top" Width="100"/>
        <Grid.Resources>
            <ResourceDictionary x:Name="CreatursDictionary">
                <ImageBrush x:Key="Angel"  ImageSource="creatures_Images\angel.png"/>
                <ImageBrush x:Key="Archer" ImageSource="creatures_Images\archer.png"/>
                <ImageBrush x:Key="Barberian"  ImageSource="creatures_Images\barberian.png"/>
                <ImageBrush x:Key="Brute" ImageSource="creatures_Images\brute.png"/>
                <ImageBrush x:Key="Dwarf"  ImageSource="creatures_Images\dwarf.png"/>
                <ImageBrush x:Key="Earthmage" ImageSource="creatures_Images\earthmage.png"/>
                <ImageBrush x:Key="Firemage"  ImageSource="creatures_Images\firemage.png"/>
                <ImageBrush x:Key="Icemage" ImageSource="creatures_Images\icemage.png"/>
                <ImageBrush x:Key="Knight" ImageSource="creatures_Images\knight.png"/>
                <ImageBrush x:Key="Necromancer"  ImageSource="creatures_Images\necromancer.png"/>
                <ImageBrush x:Key="Ninja" ImageSource="creatures_Images\ninja.png"/>
                <ImageBrush x:Key="Samurai"  ImageSource="creatures_Images\samurai.png"/>
                <ImageBrush x:Key="Skeleton" ImageSource="creatures_Images\skeleton.png"/>
                <ImageBrush x:Key="Summoner" ImageSource="creatures_Images\summoner.png"/>
            </ResourceDictionary>
        </Grid.Resources>
    </Grid>
</Window>
